# ============================================================
# Configuración de la aplicación GOB.BO Evaluator
# Copiar a .env y completar con valores reales
# ============================================================

# Base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/gob_evaluator

# Redis
REDIS_URL=redis://localhost:6379/0

# Seguridad
SECRET_KEY=cambiar-por-clave-secreta-de-minimo-32-caracteres-en-produccion

# Entorno
ENVIRONMENT=development
DEBUG=true

# CORS - URLs del frontend separadas por coma
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# URL del frontend (usada en enlaces de emails)
FRONTEND_URL=http://localhost:5173

# ============================================================
# Configuración de Email SMTP
# Para Gmail: activar "Contraseñas de aplicación" en la cuenta
# https://myaccount.google.com/apppasswords
# ============================================================
MAIL_USERNAME=tu-correo@gmail.com
MAIL_PASSWORD=xxxx-xxxx-xxxx-xxxx
MAIL_FROM=tu-correo@gmail.com
MAIL_FROM_NAME=Evaluador GOB.BO
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_TLS=true
MAIL_SSL=false
